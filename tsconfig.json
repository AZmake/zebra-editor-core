{
  "compilerOptions": {
    "target": "es5",
    "downlevelIteration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "types": [
      "react",
      "react-dom",
      "shortid"
    ],
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true
  },
  "include": [
    "src",
    "dev/index.js"
  ]
}